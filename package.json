{
  "name": "vscode-accessibility-assistant",
  "displayName": "VS Code Accessibility Assistant",
  "description": "Assist applying ARIA + POUR accessibility patterns",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "accessibilityAssistant.quickFixes",
        "title": "Run Quick Accessibility Fixes"
      },
      {
        "command": "accessibilityAssistant.insertAriaButton",
        "title": "Insert ARIA Button Snippet"
      },
      {
        "command": "accessibilityAssistant.insertAriaDialog",
        "title": "Insert ARIA Dialog Snippet"
      },
      {
        "command": "accessibilityAssistant.insertAriaFormField",
        "title": "Insert ARIA Form Field Snippet"
      },
      {
        "command": "accessibilityAssistant.insertAriaMenu",
        "title": "Insert ARIA Menu Snippet"
      },
      {
        "command": "accessibilityAssistant.insertAriaDisclosure",
        "title": "Insert ARIA Disclosure Snippet"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
